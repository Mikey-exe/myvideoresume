@page "/dashboard"@using static MyVideoResume.Client.Shared.Resume.ResumePreviewComponent@inherits BaseComponent<PageTitle>MyVideoResu.ME - Dashboard</PageTitle><RadzenRow>    <RadzenColumn Size="11">        <CreateResumeOptionsComponent ResumeCreated=@UploadCompletedHandler></CreateResumeOptionsComponent>        <RadzenText Text="Dashboard" TextStyle="Radzen.Blazor.TextStyle.DisplayH2" TagName="Radzen.Blazor.TagName.Auto"></RadzenText>        <RadzenCard>            <RadzenRow>                @if (ResumeList == null || ResumeList.Count == 0)
                {                    <RadzenText Text="Login to see or create resumes."></RadzenText>                    <RadzenButton ButtonStyle="ButtonStyle.Primary" Text="Sign In" Click="@(args => NavigateToLogin(Paths.Dashboard_View))"></RadzenButton>                }                @foreach (var resume in ResumeList)
                {                    <RadzenColumn Size="12" SizeXS="12" SizeSM="12" SizeMD="4" SizeLG="3" SizeXL="3" SizeXX="2">                        <ResumePreviewComponent ResumeItem=@resume DeleteCompleted=@DeleteCompletedHandler Mode="ResumePreviewMode.Edit"></ResumePreviewComponent>                    </RadzenColumn>                }            </RadzenRow>            <!-- For Each REsume Loop through and display -->        </RadzenCard>    </RadzenColumn></RadzenRow>