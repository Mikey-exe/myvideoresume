@page "/dashboard"@using static MyVideoResume.Client.Shared.Resume.ResumePreviewComponent@inherits BaseComponent<PageTitle>MyVideoResu.ME - Dashboard</PageTitle><RadzenRow>    <RadzenColumn Size="11">        <CreateResumeOptionsComponent></CreateResumeOptionsComponent>        <RadzenText Text="Dashboard" TextStyle="Radzen.Blazor.TextStyle.DisplayH2" TagName="Radzen.Blazor.TagName.Auto"></RadzenText>        <RadzenCard>            <RadzenRow>                <RadzenColumn Size="12" SizeXS="12" SizeSM="12" SizeMD="12" SizeLG="3" SizeXL="3" SizeXX="3">                    <AuthorizeView>                        <Authorized>                            <RadzenCard Variant="Variant.Outlined">                                <RadzenStack Orientation="Orientation.Vertical" JustifyContent="JustifyContent.Start">                                    <ResumeUploadToJsonComponent Url=@Paths.Resume_API_CreateFromFile @ref=ResumeUploadToJsonComponent UploadCompleted=@UploadCompletedHandler></ResumeUploadToJsonComponent>                                    <RadzenButton ButtonStyle="ButtonStyle.Danger" Text="Use Editor" Click="@(args => NavigateTo(Paths.Resume_CreateNew))"></RadzenButton>                                </RadzenStack>                            </RadzenCard>                        </Authorized>                        <NotAuthorized>                            <RadzenCard Variant="Variant.Outlined">                                <RadzenUpload ChooseText="Drag and drop here or click to choose files" Auto="false" Style="width: 100%" InputAttributes="@(new Dictionary<string,object>(){ { "aria-label", "select file" }})" Disabled=true />                                <p>Please sign in to begin creating your resume</p>                                <RadzenButton ButtonStyle="ButtonStyle.Primary" Text="Sign In" Click="@(args => NavigateToLogin(Paths.Dashboard_View))"></RadzenButton>                            </RadzenCard>                        </NotAuthorized>                    </AuthorizeView>                </RadzenColumn>                @foreach (var resume in ResumeList)
                {                    <RadzenColumn Size="12" SizeXS="12" SizeSM="12" SizeMD="4" SizeLG="3" SizeXL="3" SizeXX="2">                        <ResumePreviewComponent ResumeItem=@resume DeleteCompleted=@DeleteCompletedHandler Mode="ResumePreviewMode.Edit"></ResumePreviewComponent>                    </RadzenColumn>                }            </RadzenRow>            <!-- For Each REsume Loop through and display -->        </RadzenCard>    </RadzenColumn></RadzenRow>