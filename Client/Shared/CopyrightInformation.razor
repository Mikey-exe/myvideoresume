<RadzenStack AlignItems="AlignItems.Center" Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End" Gap="0.5rem" class="rz-px-2">
    <RadzenText Text="@Copyright" TextStyle="Radzen.Blazor.TextStyle.Caption" TagName="Radzen.Blazor.TagName.P" class="footerLink" />
    <RadzenText Text="@Version" TextStyle="Radzen.Blazor.TextStyle.Caption" TagName="Radzen.Blazor.TagName.P"  class="footerLink"/> |
    <RadzenLink Path="https://platform.illow.io/#/policy/privacy/1708f942-dae8-437d-8c4d-ffa6549437cb?lng=en" target="_blank" Text="Privacy Policy" TextStyle="Radzen.Blazor.TextStyle.Caption" class="footerLink"/> |
    <RadzenLink Path="TermsOfUse" Text="Terms of Use" TextStyle="Radzen.Blazor.TextStyle.Caption" class="footerLink" />
</RadzenStack>

@code {
    public string Copyright { get { return $"Copyright Ⓒ {DateTime.Now.Year} - MyVideoResu.ME - "; } }
    public string Version { get { return $"v.{VersionNumber}"; } }
    public string VersionNumber
    {
        get
        {
            return typeof(MainLayout).Assembly.GetName().Version.ToString();
        }
    }
}