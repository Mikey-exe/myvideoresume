
@inject NavigationManager NavigationManager

<RadzenStack Orientation="Orientation.Horizontal" Wrap="FlexWrap.Wrap" JustifyContent="JustifyContent.Center">
    <RadzenButton Variant="Variant.Outlined" BadgeStyle="BadgeStyle.Secondary" Text="Engineer" Click=@(args => Search("Engineer")) />
</RadzenStack>


@code {
    void Search(string filter)
    {
        NavigationManager.NavigateTo($"/search-results?filter={filter}");
    }
}